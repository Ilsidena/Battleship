<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>StartGameServlet</servlet-name>
    <servlet-class>servlets.StartGameServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>StartGameServlet</servlet-name>
    <url-pattern>/start_game</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MoveServlet</servlet-name>
    <servlet-class>servlets.MoveServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>MoveServlet</servlet-name>
    <url-pattern>/move</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FillFieldServlet</servlet-name>
    <servlet-class>servlets.FillFieldServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>FillFieldServlet</servlet-name>
    <url-pattern>/fill_field</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetAllUsersServlet</servlet-name>
    <servlet-class>servlets.GetAllUsersServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetAllUsersServlet</servlet-name>
    <url-pattern>/get_all_users</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetAllGamesServlet</servlet-name>
    <servlet-class>servlets.GetAllGamesServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetAllGamesServlet</servlet-name>
    <url-pattern>/get_all_games</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetUserGamesServlet</servlet-name>
    <servlet-class>servlets.GetUserGamesServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetUserGamesServlet</servlet-name>
    <url-pattern>/get_user_games</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetRatingServlet</servlet-name>
    <servlet-class>servlets.GetRatingServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetRatingServlet</servlet-name>
    <url-pattern>/get_rating</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UserProfileServlet</servlet-name>
    <servlet-class>servlets.UserProfileServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UserProfileServlet</servlet-name>
    <url-pattern>/user_profile</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetGameServlet</servlet-name>
    <servlet-class>servlets.GetGameServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetGameServlet</servlet-name>
    <url-pattern>/get_game</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SignupServlet</servlet-name>
    <servlet-class>servlets.SignupServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SignupServlet</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>servlets.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>servlets.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <resource-ref>
    <description>MySQL Datasource</description>
    <res-ref-name>jdbc/battleship</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>
